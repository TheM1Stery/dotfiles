{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "color": {
            "1": "green"
        },
        // "padding": {
        //     "top": 2
        // }
    },
    "display": {
        "separator": "  ",
        "color": {
            "keys": "green"
        },
        "size": {
            "ndigits": 0,
            "maxPrefix": "MB"
        }
    },
    "modules": [
        {
            "type": "title",
            "color": {
                "user": "green",
                "at": "red",
                "host": "blue"
            }
        },
        "separator",
        {
            "type": "os",
            "key": "╭─",
            "format": "{2} {9}"
        },
        {
            "type": "kernel",
            "key": "├─"
        },
        {
            "type": "memory",
            "key": "├─"
        },
        {
            "type": "cpu",
            "key": "├─",
            "temp": true
        },
        {
            "type": "gpu",
            "key": "├─G",
            "temp": true
        },
        {
            "type": "packages",
            "key": "├─"
        },
        {
            "type": "wm",
            "key": "├─"
        },
        {
            "type": "media",
            "key": "├─"
        },
        {
            "type": "uptime",
            "key": "╰─"
        }
    ]
}
